  background: #f8f8f8;
  min-height: 100vh;
}
.slot-wrap .back-icon {
  width: 48rpx;
  height: 48rpx;
  background: url(data:image/png;base64,);
  background-size: 48rpx;
  margin-left: 32rpx;
}
.m-content {
  padding: 0 32rpx;
  box-sizing: border-box;
  background: #fff;
}
.m-content .m-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
