  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.m-content .card-top-wrap .top-left .avatar {
  width: 67rpx;
  height: 67rpx;
  border-radius: 100%;
  background: red;
  margin-right: 20rpx;
}
