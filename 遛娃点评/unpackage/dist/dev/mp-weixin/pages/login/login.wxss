.app-container {
  margin: 0 60rpx;
}
.app-container .main-title {
  padding: 92rpx 0 20rpx 0;
  font-size: 52rpx;
  color: #222222;
  font-weight: 600;
}
.app-container .login-form .uni-form-item .title {
  font-size: 32rpx;
  color: #222;
  font-weight: 500;
  margin-top: 60rpx;
}
.app-container .login-form .uni-form-item .m-code {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  border-bottom: solid 1rpx #F2F2F2;
}
.app-container .login-form .uni-form-item .m-code .uni-input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  border: none;
}
.app-container .login-form .uni-form-item .m-code .u-get-code {
  width: 173rpx;
  text-align: right;
  font-size: 28rpx;
  color: #555;
}
.app-container .login-form .uni-form-item .m-code .u-divide {
  width: 2rpx;
  height: 32rpx;
  background: #f2f2f2;
}
.app-container .login-form .uni-form-item .uni-input {
  height: 100rpx;
  border-bottom: solid 1rpx #F2F2F2;
}
.app-container .login-form .uni-btn-v {
  margin-top: 120rpx;
}
.app-container .login-form .uni-btn-v .login-btn {
  width: 630rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  color: #FFFFFF;
}
.app-container .login-form .uni-btn-v .login-btn.normal-login-btn {
  background: -webkit-linear-gradient(312deg, #fd763e 0%, #f13b03 100%);
  background: linear-gradient(138deg, #fd763e 0%, #f13b03 100%);
  opacity: 0.5;
  margin-bottom: 60rpx;
}
.app-container .login-form .uni-btn-v .login-btn.normal-login-btn.active {
  opacity: 1;
}
.app-container .login-form .uni-btn-v .login-btn.wx-login-btn {
  background: -webkit-linear-gradient(315deg, #36bb63 0%, #46bb36 100%);
  background: linear-gradient(135deg, #36bb63 0%, #46bb36 100%);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.app-container .login-form .uni-btn-v .login-btn.wx-login-btn .icon-wx {
  width: 46rpx;
  height: 40rpx;
  background: url(data:image/png;base64,);
  background-size: 100%;
  margin-right: 24rpx;
}
.app-container .u-label {
  font-size: 24rpx;
  color: #B3B3B3;
  text-align: center;
  position: absolute;
  bottom: 120rpx;
  width: 630rpx;
}

