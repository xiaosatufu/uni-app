.m-header {
  padding-bottom: 48rpx;
  border-bottom: solid 20rpx #f8f8f8;
}
.m-header .m-title {
  height: 140rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0 32rpx;
}
.m-header .m-title .u-name {
  font-size: 40rpx;
  font-weight: 500;
  color: #222222;
  line-height: 56rpx;
}
.m-header .m-title .m-btn {
  width: 136rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1rpx solid #e6e6e6;
  background: url(data:image/png;base64,) 20rpx center no-repeat;
  font-size: 24rpx;
  color: #555;
  text-indent: 64rpx;
  line-height: 60rpx;
}
.m-header .m-rate {
  background: #fff5f2;
  border-radius: 16px;
  padding: 27rpx 28rpx 33rpx 40rpx;
  margin: 0 32rpx 36rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.m-header .m-rate .m-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.m-header .m-rate .m-info .u-rate {
  font-size: 68rpx;
  font-family: DIN-Medium, DIN;
}
.m-header .m-rate .m-info .m-comment-rate {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin-left: 20rpx;
}
.m-header .m-rate .m-info .m-comment-rate .u-text {
  font-size: 24rpx;
  color: #555;
  margin-bottom: 9rpx;
  margin-top: 9rpx;
}
.m-header .m-rate .u-comment {
  font-size: 24rpx;
  color: #555;
}
.m-header .m-rate .u-comment ._span {
  color: #F13B03;
}
.m-header .u-introduce {
  position: relative;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-justify: inter-ideograph;
  text-align: justify;
  font-size: 28rpx;
  color: #555;
  line-height: 48rpx;
  margin: 0 32rpx;
}
.m-header .u-introduce:after {
  content: "...全部";
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 0 0 1rpx 0;
  cursor: pointer;
  background: #FFFFFF;
  color: #F13B03;
}

