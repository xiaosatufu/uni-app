.card-top-wrap {
  padding: 36rpx 0 36rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.card-top-wrap .top-left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.card-top-wrap .top-left .avatar {
  width: 67rpx;
  height: 67rpx;
  border-radius: 100%;
  background: red;
  margin-right: 20rpx;
}
.card-top-wrap .top-left .info .name {
  font-size: 28rpx;
  color: #222;
}
.card-top-wrap .top-left .info .u-info {
  font-size: 20rpx;
  color: #b3b3b3;
}
.card-top-wrap .top-right .btn-more {
  width: 31rpx;
  height: 31rpx;
  background: url(data:image/png;base64,);
  background-size: 100%;
}
.card-top-wrap .top-right .btn-focus {
  width: 120rpx;
  height: 56rpx;
  background: -webkit-linear-gradient(312deg, #fd763e 0%, #e64b29 100%);
  background: linear-gradient(138deg, #fd763e 0%, #e64b29 100%);
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(0, 0, 0, 0.02);
  border-radius: 30rpx;
  text-align: center;
  line-height: 56rpx;
  font-size: 24rpx;
  color: #fff;
}
.card-top-wrap .top-right .time {
  font-size: 24rpx;
  color: #b3b3b3;
}

