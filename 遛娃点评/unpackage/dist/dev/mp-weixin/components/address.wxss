.address-wrap {
  background: #f8f8f8;
  box-shadow: 0px 0px 14rpx 0px rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
}
.address-wrap .m-image {
  width: 124rpx;
  height: 124rpx;
  background: #fbf3ef;
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(0, 0, 0, 0.02);
  border-radius: 8rpx;
  position: relative;
  margin-right: 22rpx;
}
.address-wrap .m-image .label {
  width: 64rpx;
  height: 36rpx;
  background: -webkit-linear-gradient(312deg, #fd763e 0%, #e64b29 100%);
  background: linear-gradient(138deg, #fd763e 0%, #e64b29 100%);
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(0, 0, 0, 0.02);
  border-radius: 8rpx 0rpx 8rpx 0rpx;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
}
.address-wrap .m-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.address-wrap .m-info .address-name {
  font-size: 28rpx;
  color: #222;
  font-weight: 500;
}
.address-wrap .m-info .m-address {
  font-size: 24rpx;
  color: #b3b3b3;
}

