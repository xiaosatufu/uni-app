.card-wrap {
  margin: 0 32rpx 0;
  padding: 32rpx 24rpx 0;
  background: white;
  box-shadow: 0px 0px 14rpx 0px rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  box-sizing: border-box;
}
.card-wrap .card-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 32rpx;
}
.card-wrap .card-info .image-box {
  width: 200rpx;
  height: 200rpx;
  background: #fbf3ef;
  box-shadow: 0rpx 0rpx 15rpx 0rpx rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  margin-right: 24rpx;
  overflow: hidden;
}
.card-wrap .card-info .image-box .image {
  width: 200rpx;
  height: 200rpx;
}
.card-wrap .card-info .m-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.card-wrap .card-info .m-info .u-title {
  font-size: 32rpx;
  color: #222;
}
.card-wrap .card-info .m-info .m-rate {
  font-size: 24rpx;
  color: #555;
}
.card-wrap .card-info .m-info .m-comment {
  font-size: 24rpx;
  color: #b3b3b3;
}
.card-wrap .card-info .m-info .m-comment ._span {
  color: #F13B03;
}
.card-wrap .card-info .m-info .m-address {
  font-size: 24rpx;
  color: #b3b3b3;
}
.card-wrap .card-info .m-info .m-address .u-distance {
  margin-left: 20rpx;
}

